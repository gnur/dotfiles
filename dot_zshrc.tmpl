func ccd () {
  cd
  f=$(fd --type d --hidden | fzf --no-mouse)
  if [[ -z $f ]]; then
    return
  fi

  cd "$f"
}

func vietc () {
  cd /etc
  f=$(sudo fd --type d --hidden | fzf --no-mouse)
  if [[ -z $f ]]; then
    return
  fi

  sudo vi "$f"
}

func vif () {
  cd
  f=$(fd --type d --hidden | fzf --no-mouse)
  if [[ -z $f ]]; then
    return
  fi

  vi "$f"
}



